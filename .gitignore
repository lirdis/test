# Ignore wp-config.php and .htaccess
wp-config.php
.htaccess

# Ignore composer files
/vendor
composer.lock

# Don't Ignore the wp-content directory, but ignore everything inside
!/wp-content
/wp-content/*

# Don’t ignore plugins dir, but ignore everything inside
!/wp-content/plugins
/wp-content/plugins/*

# Don’t ignore akismet plugin
!/wp-content/plugins/akismet

# Don’t ignore themes dir, but ignore everything inside
!/wp-content/themes
/wp-content/themes/*

# Don’t ignore child themes
!/wp-content/themes/*child*
